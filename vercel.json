{
  "version": 2,

  "installCommand": "cd client && npm install && cd .. && cd server && npm install",

  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    },

    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },

    {
      "src": "/(.*)",
      "dest": "client/dist/index.html"
    }
  ]
}
